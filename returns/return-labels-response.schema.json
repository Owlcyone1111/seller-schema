{
    "title": "GenerateReturnsLabelsResponse",
    "type": "object",
    "additionalProperties" : false,
    "properties":{
        "merchant_name":{
            "type":"string",
            "description":"The name of the merchant",
            "required":true
        },
        "merchant_phone_number":{
            "type":"string",
            "description":"The merchant's phone number",
            "required":true
        },
        "merchant_order_id":{
            "type":"string",
            "required":true,
            "description":"The order ID associated with the orders you want to return"
        },
        "return_items":{
            "required": true,
            "type":"array",
            "minItems":1,
            "items":{
                "$ref":"#/definitions/return_items_array"
            }
        }
    },
    "definitions":{
        "return_items_array":{
            "title": "GenerateReturnsLabels",
            "type": "object",
            "properties": {
				"return_id_information":{
					"type":"object",
					"title":"return_id_information",
					"required":true,
					"properties":{
						"return_id":{
							"type":"string",
							"required":true,
                            "description":"The return id for the label
							
                            #Logic 
							1. If RMA_number exists then this is used
							2. If alt_order_id exists then this is used
							3. Use reference_order_id
							"
							
						},
						"return_id_type":{
							"type":"string",
                            "required":true,
							"enum":[
								"RMA_number",
								"alt_order_id",
								"reference_order_id"
							]
						}
					}
				},
                "product_title":{
                    "type":"string",
                    "required":true,
                    "description":"The product title for the SKU"
                },
                "merchant_order_item_id":{
                    "type":"string",
                    "required":true,
                    "description":"The merchant order item ID for the order"
                },
                "is_thor_return":{
                    "type":"boolean",
                    "required":true,
                    "description":"If true, Quicksilver will decide which Thor FC the return should be shipped to"
                },
                "addresses":{
                    "title": "Addresses",
                    "type" :  "array",
                    "description":"Addresses of the returns locations",
                    "items":{
						"type":"object",
						"title":"address",
						"properties":{
                            "return_location_name": {
                                "type": "string",
                                "description": "The name of your return location"
                            },
							"address1": {
								"type": "string",
								"description": "Line 1 of the address"
							},
							"address2": {
								"type": "string",
								"description": "Line 2 of the address"
							},
							"city": {
								"type": "string",
								"description": "City of the address"
							},
							"state": {
								"type": "string",
								"minLength":2,
								"maxLength":2,
								"description": "State of the address"
							},
							"zip_code": {
								"type": "string",
								"minLength":5,
								"maxLength":5,
								"description": "Zip code of the address"
							}
						}
                    }
                },
                "return_shipping_methods":{
                    "type":"array",
                    "items":{
                        "type":"string",
                        "enum":[
                            "FedEx Ground",
                            "UPS Ground",
                            "Freight"                 
                        ]
                    },
                    "description": "The return shipping methods specified in the event of a returns exception

                    #Valid Values
                    * 'FedEx Ground'
                    * 'UPS Ground'
                    * 'Freight'"
                }
            }
        }
    }
}