{
    "$schema" : "http://json-schema.org/draft-03/schema",		
	"title": "SettlementOrdersReport",
	"type": "object",
    "additionalProperties" : false,		
	"description": "This schema provides the fields for a merchant to return a settlement report based on order sales and customer returns on Jet.com",
	"properties": {
		"currency": {
			"type": "string",
			"required": true,
			"description": "The currency that all monetary values are represented in for the settlement report retrieved"
		},
        "order_balance": {
            "type": "number",
            "required": true,
            "description": "The total value of orders that is settled in this settlement report"
        },
		"order_balance_details":{
			"required": true,
			"items":{
				"$ref":"#/definitions/settlement_order_report_details"
			}
		},
        "order_item_balance_details":{
            "required": true,
            "items":{
                "$ref":"#/definitions/settlement_order_report_item_details"
            }
        }
	},
	"definitions":{
        "settlement_order_report_details": {
            "title": "SettlementOrderReportDetails",
            "additionalProperties" : false,
            "type": "object",
            "properties": {
                "merchant_price": {
                    "type": "number",
                    "required": true,
                    "description" : "The merchant price of the product"
                },
                "jet_variable_commission": {
                    "type": "number",
                    "required": true,
                    "description" : "The variable commission charged by Jet or paid to the merchant"
                },
                "fixed_commission": {
                    "type": "number",
                    "required": true,
                    "description" : "The fixed commision for a sale"
                },
                "tax": {
                    "type": "number",
                    "required": true,
                    "description" : "The tax charged to the customer for buying the item"
                },
                "shipping_revenue": {
                    "type": "number",
                    "required": true,
                    "description" : "The shipping revenue charged to the customer for buying the item"
                },
                "shipping_tax": {
                    "type": "number",
                    "required": true,
                    "description" : "The tax charged on shipped revenue"
                }, 
                "shipping_charge": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the charge for shipping the item to the customer"
                },
                "fulfillment_fee": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the charge for Jet to fulfill the customer order"
                },
                "product_cost": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the all in cost of the product sold to the customer"
                }                
            }
        },
        "settlement_order_report_item_details": {
            "title": "SettlementOrderItemReportDetails",
            "additionalProperties" : false,
            "type": "object",
            "properties": {
                "order_item_id" : {
                    "type": "string",
                    "required": true,
                    "description" : "The Order Item ID assigned to an item in an order by Jet.  This can be found in the Orders API."
                },
                "alt_order_item_id" : {
                    "type": "string",
                    "required": false,
                    "description" : "The Merchant Order Item ID given to Jet during the order acknowledgment or shipped message by the merchant"
                },
                "merchant_order_id" : {
                    "type": "string",
                    "required": false,
                    "description" : "The Merchant Order ID assigned to an order by Jet.  This can be found in the Orders API."
                },
                "alt_order_id" : {
                    "type": "string",
                    "required": false,
                    "description" : "The Merchant Order ID given to Jet during the order acknowledgment or shipped message by the merchant"
                },
                "fulfillment_method" : {
                    "type": "string",
                    "required": false,
                    "enum" : ["merchant", "dbj"], 
                    "description" : "How the order was fulfilled. 

                    #Valid Values

                    * merchant - the merchant fulfilled and shipped the order through self operated fulfillment center or drop shippers   

                    "
                },
                "merchant_price": {
                    "type": "number",
                    "required": true,
                    "description" : "The merchant price of the product"
                },
                "jet_variable_commission": {
                    "type": "number",
                    "required": true,
                    "description" : "The variable commission charged by Jet or paid to the merchant"
                },
                "fixed_commission": {
                    "type": "number",
                    "required": true,
                    "description" : "The fixed commision for a sale"
                },
                "shipping_revenue": {
                    "type": "number",
                    "required": true,
                    "description" : "The shipping revenue charged to the customer for buying the item"
                },
                "tax": {
                    "type": "number",
                    "required": true,
                    "description" : "The tax charged to the customer for buying the item"
                },
                "shipping_tax": {
                    "type": "number",
                    "required": true,
                    "description" : "The tax charged on shipped revenue"
                },
                "tax_info": {
                    "title": "SettlementItemTaxInfo",
                    "type" : "object",
                    "additionalProperties" : false,
                    "properties": {
                        "tax_jurisdictions": { 
                            "type": "object",
                            "$ref": "#/definitions/settlement_tax_jurisdictions"                
                        },
                        "taxable_amounts": {
                            "type": "object",
                            "$ref": "#/definitions/settlement_amounts"
                        },
                        "non_taxable_amounts": {
                            "type": "object",
                            "$ref": "#/definitions/settlement_amounts"                
                        },
                        "zero_rated_amounts": {
                            "type": "object",
                            "$ref": "#/definitions/settlement_amounts"
                        },
                        "tax_collected_amounts": {
                            "type": "object",
                            "$ref": "#/definitions/settlement_amounts"                
                        },
                        "tax_rates": {
                            "type": "object",
                            "$ref": "#/definitions/settlement_amounts"
                        }
                    }
                },                                                      
                "shipping_charge": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the charge for shipping the item to the customer"
                },
                "fulfillment_fee": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the charge for Jet to fulfill the customer order"
                },
                "product_cost": {
                    "type": "number",
                    "required": true,
                    "description" : "If the item is sold via DBJ (Distributed By Jet), then this is the all in cost of the product sold to the customer"
                }                
            }
        },
        "settlement_tax_jurisdictions" : {
            "title" : "SettlementItemTaxJurisdictions",
            "type" : "object",
            "additionalProperties" : false,
            "properties" : {
                "tax_district" : {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/tax_districts_array" 
                    }
                },
                "tax_city" : {
                    "type" : "string",
                    "required" : false,
                    "description" :"Name of the city in which tax was collected"
                },
                "tax_county" : {
                    "type" : "string",
                    "required" : false,
                    "description" : "Name of the county that tax was collected"
                },
                "tax_state" : {
                    "type" : "string",
                    "required" : false,
                    "descrition" : "Two letter abbreviation for the state in which tax was collected"
                }
            }
        },
        "settlement_amounts": {
            "title": "SettlementTaxItemAmounts",
            "type": "object",
            "additionalProperties" : false,
            "properties": {
                "tax_district" : {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/tax_districts_array" 
                    }
                },
                "city_amount": {
                    "type": "number",
                    "required": false,
                    "description": "Amount at the city level"
                },
                "county_amount": {
                    "type": "number",
                    "required": false,
                    "description": "Amount at the county level"
                },
                "state_amount": {
                    "type": "number",
                    "required": false,
                    "description": "Amount at the state level"
                }
            }
        },
        "tax_districts_array": {
            "title": "SettlmentItemTaxDistrictsArray",
            "type": "object",
            "additionalProperties" : false,
            "properties": {
                "tax_location" : {
                    "type": "string",
                    "description" : "The district that tax is collected for"
                },
                "district_amount": {
                    "type": "number",
                    "required": false,
                    "description": "The amount that corresponds to the district in the array"
                }
            }
        }
	}
}